ul.nav.navbar-nav.navbar-right(ng-controller="LoginCtrl", ng-hide="identity.isAuthenticated()")
    li
        a(href="#/login") Login
    li
        a(href="#/signup") Sign Up
ul.nav.navbar-nav.navbar-right(ng-controller="LoginCtrl", ng-show="identity.isAuthenticated()")
    li.dropdown
        a.dropdown-toggle(href="", data-toggle="dropdown")
            | {{ identity.currentUser().firstName + " " + identity.currentUser().lastName }}
            span.caret
        ul.dropdown-menu
            li(ng-show="identity.isAdmin()")
                a(href="#/admin/users") Users
                    img.icon.pull-right(src="images/users.png")
            li(ng-show="identity.isAuthenticated()")
                a(href="#/profile") Profile
                    img.icon.pull-right(src="images/settings.png")
            li
                a(href="#", ng-click="logout()") Sign out
                    img.icon.pull-right(src="images/logout.png")