.container
            .panel.panel-default
                .panel-heading.text-center
                    h1
                        | YourFood Hackathon
                .panel-body
                    div(ng-controller="MainCtrl")
                        div(style="height: 300px")
                            carousel(interval="interval")
                                slide(ng-repeat="product in products", active="product.active")
                                    img(ng-src="{{product.image}}", style="margin:auto;")
                                    div(class="carousel-caption")
                                        h4 {{ product.name }}
                                        h6 {{product.category}}
