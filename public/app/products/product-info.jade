.container
    .row
        .jumbotron.col-md-8(ng-show="isLogged")
            .row
                .col-md-6
                    .image-container
                        img(src="{{product.image}}")
                .col-md-6
                    h3
                        | {{product.name}}
                    .panel
                        .panel-body
                            strong.col-md-8.text-left Category
                            .col-md-4.text-right {{product.categoryName}}
                        .panel-body
                            strong.col-md-8.text-left Unit type
                            .col-md-4.text-right {{product.unit}}
                        .panel-body
                            strong.col-md-8.text-left Avarage freshnes
                            .col-md-4.text-right {{product.lifetime}} days
                        .panel-body.text-center.quantity-slider
                            .col-md-4 {{quantity}} {{product.unit}}
                            .col-md-8
                                input(type="range", step="50", min="50", max="2000" ng-model="quantity")
                    .row
                        div.text-right.bottom-right
                            a.btn.btn-lb.btn-success(href="#/products", ng-click="addToShoppingList(quantity)") Add to List